<form action="{{#if editing}} /admin/edit-product {{else}} /admin/add-product {{/if}}" method="POST" class="product-form">
  <div class="form-control">
    <label for="title"> Title </label>
    <input type="text" name="title" id="title" value="{{#if editing}}{{product.title}}{{/if}}" />
  </div>
  <div class="form-control">
    <label for="imageUrl"> Image Url </label>
    <input type="text" name="imageUrl" id="imageUrl" value="{{#if editing}}{{product.imageUrl}}{{/if}}" />
  </div>
  <div class="form-control">
    <label for="price"> Price </label>
    <input type="number" name="price" id="price" step="0.01" value="{{#if editing}}{{product.price}}{{/if}}" />
  </div>
  <div class="form-control">
    <label for="description"> Description </label>
    <textarea name="description" id="description" rows="5">
{{#if editing}}{{product.description}}{{/if}}
    </textarea>
  </div>

  {{#if editing}}
  <input type="hidden" value="{{product.id}}" name="productId" />
  {{/if}}

  <button type="submit">{{#if editing}} Update {{else}} Add{{/if}}
    Product</button>
</form>